#training
	%p= @training.date
	%p= @training.workout
	%p= @training.length

#exercises
	%h2 Exercises
	= render @training.exercises

	%h3 Add an exercise
	= render "exercises/form"

	= link_to "Back", root_path
	= link_to "Edit", edit_training_path(@training)
	= link_to "Delete", training_path(@training), method: :delete, data: { confirm: "Are you sure?" }